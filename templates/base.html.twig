<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Welcome!


			{% endblock %}
		</title>
		{# Run composer require symfony/webpack-encore-bundle
						                                           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% block head %}
			<div class="container col-10 mt-3">
				{% if is_granted('ROLE_ADMIN') %}
					<ul class="nav justify-content-center">
						<li class="nav-item">
							<a class="nav-link active" href="{{ path('home') }}">
								Home


							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('student_index') }}">
								Student List


							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('subject_index') }}">
								Subject List


							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('subject_index') }}">
								Major List


							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('subject_index') }}">
								Class List


							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link disabled" href="{{ path('app_logout') }}" onclick="">
								Logout


								<u>
									<i>
										{% if app.user !=null %}
											(


											{{ app.user.username }}
											)


										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
				{% else %}
					<ul class="nav justify-content-center">
						<li class="nav-item">
							<a class="nav-link active" href="{{ path('home') }}">
								Home
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('subject_index') }}">
								Subject List
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link disabled" href="{{ path('app_logout') }}">
								Logout
								<u>
									<i>
										{% if app.user !=null %}
											(
											{{ app.user.username }}
											)
										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
				{% endif %}
			</div>
		{% endblock %}
		{% block body %}{% endblock %}
		{% block footer %}
			<div class="container col-10 mt-3 text-center">
				<p class="alert alert-primary">
					Nguyen Tho Khiem - Le Minh Vu - Nguyen Duy Anh
				</p>
			</div>
		{% endblock %}
	</body>
</html>
